{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [ "@typescript-eslint" ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "error", // Запрещает `any`
    "@typescript-eslint/no-unused-vars": "error", // Неиспользуемые переменные
    "semi": [ "error", "always" ], // Точки с запятой обязательны
    "quotes": [ "error", "single" ], // Одинарные кавычки
    "prettier/prettier": "error" // Ошибки при несоответствии формату
  }
}